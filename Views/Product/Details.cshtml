@using estore.Models;
@using estore.Utilities;
@model Products;
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Chi tiết sản phẩm";
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<main>
    <div class="container">
        <form asp-controller="Cart" asp-action="AddToCart" method="post">
            <input name="ProductId" value="@Model.ProductId" hidden />
            <input name="User" value="@Functions._userid" hidden />

            <div class="row product-btn d-flex justify-content-between mb-4">
                <h2>@Model.Name</h2>
            </div>

            <div class="row">
                <div class="col-md-5">
                    <img src="@Model.Images" class="img-fluid rounded border" alt="@Model.Name" />
                </div>
                <div class="col-md-7">
                    <h4>@Model.Title</h4>
                    <p><strong>Giá:</strong> @Model.Price.ToString("N0") đ</p>
                    <p><strong>Danh mục:</strong> @Model.Categori?.Name</p>

                    <div class="form-group mb-4">
                        <div class="mb-3">
                            <strong><i class="fa fa-clipboard-list"></i> số lượng sẵn kho theo size:</strong>
                            <table class="table table-sm table-bordered w-auto mt-2">
                                <thead class="table-light">
                                    <tr>
                                        <th>Size</th>
                                        <th>Số lượng</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var size in Model.ProductDetails)
                                    {
                                        <tr>
                                            <td>Size @size.ProductSize.Size</td>
                                            <td><span class="text-primary fw-semibold">@size.Quantity cái</span></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="row g-3 align-items-end">
                            <div class="col-md-4">
                                <label class="form-label fw-bold" for="SizeId">Chọn size:</label>
                                <select name="SizeId" class="form-select" id="SizeId" required>
                                    <option value="0" disabled>Vui lòng lựa chọn size</option>
                                    <option value="1">S</option>
                                    <option value="2">M</option>
                                    <option value="3">L</option>
                                    <option value="4">XL</option>
                                    <option value="5">XXL</option>
                                </select>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label fw-bold" for="Quantity">Số lượng muốn mua:</label>
                                <input type="number" name="Quantity" class="form-control" value="1" min="1" max="20" />
                            </div>
                        </div>
                    </div>



                    

                    <button type="submit" class="btn btn-success mt-3">Thêm vào giỏ hàng</button>
                </div>
            </div>
        </form>
        <div class="row mt-4">
            <div class="col-md-12">
                <h4 class="mb-3">📌 Mô tả sản phẩm chi tiết</h4>
                <p style="line-height: 1.8; font-size: 1.05rem;">
                    @Model.Contents
                </p>
            </div>
        </div>
    </div>
</main>
