
@model estore.Models.Slide
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận thêm Slide</h2>
    </div>
    <div class="container shadow p-5">
        <div class="row pb-2">
            <h2>Thêm mới Slide</h2>
        </div>

        <form method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Title">Tieu de</label>
                    <input type="text" class="form-control mb-3" asp-for="Title" placeholder="Nhap tieu de" />
                    <span asp-validation-for="Title" class="alert-danger"></span>
                </div>
            </div>
            <div class="form-row">
              
                <div class="form-group col-md-6">
                    <label asp-for="Contents">Noidung</label>
                    <input type="text" class="form-control mb-3" asp-for="Contents" placeholder="Entercontents" />
                    <span asp-validation-for="Contents" class="alert-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Image">Ảnh</label>
                    <input type="text" class="form-control mb-3" asp-for="Image" placeholder="Enter ảnh" />
                    <span asp-validation-for="Image" class="alert-danger"></span>
                </div>
                
                <div class="form-group mt-5 mb-5">
                    <label>
                        @Html.CheckBox("IsActive", false)
                        Hiển thị
                    </label>
                </div>              
            </div>
            <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Lưu</button>
            <a asp-controller="Slide" asp-action="index" class="btn btn-lg btn-warning p-2">Quay lại</a>
        </form>
    </div>
</main>