@model estore.Models.Products
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<main id="main" class="main">
    <div class="page-title">
        <h2>Xác nhận xóa sản phẩm</h2>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6 ">
            <label asp-for="ProductId">ID</label>
            <input type="text" class="form-control mb-3" asp-for="ProductId" disabled />
        </div>
         
        <div class="form-group col-md-6">
            <label asp-for="Name">Tên sản phẩm</label>
            <input type="text" class="form-control mb-3" asp-for="Name" disabled />
        </div>
    </div>
    

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ProductId" />
        <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
            <i class="bi bi-arrow-left-circle"></i> Trở về
        </a>
        <button type="submit" class="btn btn-lg  btn-danger p-2">
            <i class="bi bi-trash"></i> Xác nhận
        </button>
    </form>
</main>

