@using estore.Models;
@model IList<Products>
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <h2 class="mb-4">Danh sách sản phẩm</h2>

    <a asp-action="Create" class="btn btn-primary mb-3">➕ Thêm sản phẩm</a>
    <section class="sectio dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-body mt-4">
                        <table class="table table-borderless datatable">
                            <thead class="table-dark text-center">
                                <tr>
                                    <th class="text-center">#</th>
                                    <th class="text-center">Tên sản phẩm</th>
                                    <th class="text-center">Giá tiền</th>
                                    <th class="text-center">Danh mục</th>
                                    <th class="text-center">Hiển thị</th>
                                    <th class="text-center">Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="text-center">
                                        <td>@item.ProductId</td>
                                        <td>@item.Name</td>
                                        <td>@item.Price.ToString("N0") đ</td>
                                        <td>@item.Categori?.Name</td>
                                        <td>
                                            @if (item.IsActive == true)
                                            {
                                                <span class="badge bg-success">Hiển thị</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Ẩn</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-sm btn-warning me-1">
                                                <i class="bi bi-pencil"></i> Sửa
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc muốn xoá sản phẩm này không?');">
                                                <i class="bi bi-trash"></i> Xoá
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>

</main>