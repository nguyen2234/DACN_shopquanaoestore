@model List<estore.Models.Contact>
@{
    ViewData["Title"] = "Quản lý liên hệ";
    int i = 1;
}
<main id="main" class="main">
    <h2>Danh sách liên hệ</h2>
    <div class="card recent-sales overflow-auto">
        <div class="card-body mt-4">
            <table class="table table-bordered text-center datatable">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Họ tên</th>
                        <th>Email</th>             
                        <th>Ngày gửi</th>
                        <th>Trạng thái</th>
                        <th>Chức năng</th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@item.Name</td>
                            <td>@item.Email</td>
                        
                            <td>@item.SentAt.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @if (item.IsActive==false)
                                {
                                    <span class="badge bg-warning text-dark">Chưa xử lý</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Đã xử lý</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Chi tiết</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Xoá liên hệ này?')" class="btn btn-danger btn-sm">Xoá</a>
                            </td>

                        </tr>
                        i++;
                    }
            </tbody>

        </table>
    </div>
</div>
</main>