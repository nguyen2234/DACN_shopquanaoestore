@model List<ThongkeDoanhThuView>
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@{
    int STT = 1;
}

<main class="main" id="main">
    <div class="page-title"></div>


    <div class="container mt-4">
        <h2 class="mb-4"><i class="bi bi-bar-chart-fill"></i> Thống kê doanh thu theo tháng</h2>
        <a class="btn btn-success mb-3" href="@Url.Action("ExportDoanhThuThang", "ThongKe", new { tuNgay = ViewBag.TuNgay, denNgay = ViewBag.DenNgay })">
            <i class="bi bi-file-earmark-excel-fill"></i> Tải thống kê doanh thu
        </a>

        <form method="get" class="row g-3 align-items-end mb-4">
            <div class="col-md-4">
                <label for="tuNgay" class="form-label">Từ ngày:</label>
                <input type="date" id="tuNgay" name="tuNgay" class="form-control" value="@ViewBag.TuNgay?.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-4">
                <label for="denNgay" class="form-label">Đến ngày:</label>
                <input type="date" id="denNgay" name="denNgay" class="form-control" value="@ViewBag.DenNgay?.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Lọc</button>
            </div>
            <div class="col-md-2">
                <a asp-action="Index" class="btn btn-secondary w-100">Xóa lọc</a>
            </div>
        </form>
        <table class="table table-bordered table-striped text-center">
            <thead class="table-dark">
                <tr>
                    <th>Tháng</th>
                    <th>Số sản phẩm đã bán</th>
                    <th>Doanh thu</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>Tháng @item.Thang</td>
                        <td>@item.SoLuongSanPham</td>
                        <td>@item.DoanhThu.ToString("N0") đ</td>
                    </tr>
                }
            </tbody>
        </table>
        <h3 class="mt-5"><i class="bi bi-fire text-danger"></i> Top 10 sản phẩm bán chạy</h3>
        <a class="btn btn-success mb-3" href="@Url.Action("ExportExcel", "ThongKe", new { tuNgay = ViewBag.TuNgay, denNgay = ViewBag.DenNgay })">
            <i class="bi bi-file-earmark-excel-fill"></i> Tải thống kê bán chạy
        </a>

        <table class="table table-bordered table-striped text-center datatable">
            <thead class="table-success">
                <tr>
                    <th class="text-center">STT</th>
                    <th class="text-center">Tên sản phẩm</th>
                    <th class="text-center">Số lượng bán</th>
                    <th class="text-center">Doanh thu</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.TopSanPham as List<ThongkeSanPham>)
                {
                    <tr>
                        <td>@STT</td>

                        <td>@item.TenSanPham</td>
                        <td>@item.TongSoLuong</td>
                        <td>@item.TongTien.ToString("N0") đ</td>
                    </tr>
                    STT++;
                }
            </tbody>
        </table>

    </div>

</main>